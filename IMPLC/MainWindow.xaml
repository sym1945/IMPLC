<Window x:Class="IMPLC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMPLC"
        mc:Ignorable="d" 
        d:DataContext="{d:DesignInstance local:MainViewModel}"
        ResizeMode="NoResize"
        Title="IMPLC" 
        Height="600" 
        Width="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Side Menu : Device Setting -->
        <local:DeviceSetting 
            x:Name="deviceSettingMenu"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="-400 0 400 0"
            Panel.ZIndex="1">
            <local:DeviceSetting.Style>
                <Style TargetType="{x:Type local:DeviceSetting}">
                    <Style.Triggers>
                        <DataTrigger 
                            Binding="{Binding DataContext.ShowSettingMenu, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}" 
                            Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            To="0 0 0 0"
                                            Duration="0:0:0.5"
                                            DecelerationRatio="1"
                                            Storyboard.TargetProperty="Margin"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            To="-400 0 400 0"
                                            Duration="0:0:0.5"
                                            DecelerationRatio="1"
                                            Storyboard.TargetProperty="Margin"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </local:DeviceSetting.Style>
        </local:DeviceSetting>

        <!-- Menu bar -->
        <Border Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button 
                    Content="Device Setting"
                    Command="{Binding ShowSettingMenuCommand}"/>
            </StackPanel>
        </Border>

        <!-- Service Setting -->
        <GroupBox 
            Grid.Row="1"
            Padding="10"
            Margin="10"
            DataContext="{Binding ServiceViewModel}">
            <GroupBox.Header>
                <TextBlock Text="Service"/>
            </GroupBox.Header>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Service Type And Root Uri -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Text="Service Type"/>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="Root URI"/>

                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        ItemsSource="{Binding ServiceTypes}"
                        SelectedItem="{Binding SelectedServiceType}">
                    </ComboBox>

                    <TextBox 
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{Binding RootUri}"/>
                </Grid>

                <!-- Button -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Content="START"
                        Command="{Binding StartCommand}"
                        />

                    <Button 
                        Grid.Column="1"
                        Content="STOP"
                        Command="{Binding StopCommand}"
                        />
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Log -->
        <GroupBox 
            Grid.Row="2"
            Padding="10"
            Margin="10">
            <GroupBox.Header>
                <TextBlock Text="Log"/>
            </GroupBox.Header>

            <local:LogViewer />

        </GroupBox>
    </Grid>
</Window>
